{% extends "StolarzBundle:Default:base.html.twig" %}

{% block title %}Materiały{% endblock %}

{% block content %}
    <h1>Materiały:</h1>
    {% if confirmation is not null %}
        {{ confirmation }}<br>
    {% endif %}

    {% if exist is not null %}
        <font color = "red"><b>Materiał o id {{ exist }} nie istnieje.</b></font><br>
    {% endif %}

    {% if deleted is not null %}
        Materiał {{ deleted.name }} skasowany.<br>
    {% endif %}

    <a href="{{ path('createMaterial') }}">Dodaj nowy materiał</a>

    <table border = "1" rules = "all">
        <tr>
            <td>Id</td>
            <td>Nazwa</td>
            <td>Uwagi</td>
            {#<td>Usuwanie</td>#}
        </tr>
        {% set i = 0 %}
        {% for material in allMaterials %}
            {% set i = i + 1 %}
            <tr>
                <td>{{ i }}</td>
                <td>{{ material.name }}</td>
                <td>{{ material.description }}</td>
                <td><a href="{{ path('deleteMaterial', {'id':material.id}) }}">Usuń materiał</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}